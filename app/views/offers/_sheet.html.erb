            <td><strong>24/7 MVPD Sub Estimate</strong></td>
            <td><input type="text" value="<%= number_to_currency @offer.dollar_amount %>"/></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td><strong>Half Hour Rate</strong></td>
            <td>Jame</td>
            <td><strong>Hour Rate</strong></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td><strong>MVPD Subscriber Rate</strong></td>
            <td>Sarah</td>
            <td><strong>MVPD-OTA Sub Rate</strong></td>
            <td>@sarah</td>
            <td><strong>Total Homes 24/7 Rate</strong></td>
            <td>idk</td>
          </tr>
          <tr>
