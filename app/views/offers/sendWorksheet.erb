<div class="row">
  <div class="col-md-12">
    <% if !!@result %>
        <h1>Email Sent</h1>
        <h4>Worksheet email sent successfully to <a href="mailto:<%= @result.to.first %>"><%= @result.to.first %></a>
          at <%= @result.date.rfc822 %>.</h4>
        <a href="<%= url_for offers_path %>">
          <button class="btn btn-primary pull-right">Back</button>
        </a>
    <% else %>
        <h1>Email not sent.</h1>
        <h4>Email was not sent due to the following errors: <%= @result.errors %></h4>
        <a href="<%= url_for offers_path %>">
          <button class="btn btn-primary pull-right">Back</button>
        </a>


        <p>Debug info: <%= @result %></p>
    <% end %>
  </div>
</div>