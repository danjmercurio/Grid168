<body class="account">
  <div class="container">
    <div class="row">
      <div class="account-col text-center">
        <h1>Welcome to Grid168</h1>
        <h3>Log into your account</h3>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'm-t', :role => 'form') do |f| %>
          <div class="form-group">
            <%= f.text_field :email, class: 'form-username form-control', id: 'form-username', placeholder: 'you@awesome.com', :required => '' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password...', :required => '' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do -%>
            Login
          <% end %>
          <a href="#"><small>Forgot password?</small></a>
          <p class=" text-center"><small>Do not have an account?</small></p>
          <a class="btn btn-default btn-block" href="<%= url_for(new_user_registration_url) %>">Create an account</a>
          <p>Grid168 &copy; <%= Time.now.year %></p>
        <% end %>
      </div>
    </div>
  </div>
</body>
