<%= stylesheet_link_tag 'application' %>
<%= stylesheet_link_tag 'login_form-elements' %>
<%= stylesheet_link_tag 'login_style' %>
<%= javascript_include_tag 'jquery.backstretch.min' %>
<%= javascript_include_tag 'scripts' %>
<% if flash[:alert] == 'Invalid email or password.' %>
    <script type="text/javascript">
      $(document).ready(window.appendRegisterLink);
    </script>
<% end %>
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1>Login to <strong>Grid168</strong></h1>
          <!--<div class="description">-->
          <!--<p>-->
          <!--Enter your <strong>username</strong> and <strong>password</strong> to login.-->
          <!--</p>-->
          <!--</div>-->
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div data-role="appendTo" class="form-top-left"><h3>Welcome!</h3>
              <p>Enter your username and password to log on:</p></div>
            <div class="form-top-right"><i class="fa fa-key"></i></div>
          </div>
          <div class="form-bottom">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'login-form') do |f| %>
                <div class="form-group" style="margin-bottom: 0"> <!-- changed the bottom margin on this particular div because it looks better -->
                  <%= f.label :email, class: 'sr-only' %>
                  <%= f.text_field :email, class: 'form-username form-control', id: 'form-username', placeholder: 'you@awesome.com' %>
                </div>

                <div class="form-group">
                  <%= f.label :password, class: 'sr-only', for: 'form-password' %><br/>
                  <%= f.password_field :password, class: 'form-password form-control', placeholder: 'Password...' %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>
                <%= button_tag(type: 'submit', class: 'btn purple-bg') do -%>
                    Log In
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
