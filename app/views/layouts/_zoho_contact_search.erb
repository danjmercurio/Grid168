<div class="row">
  <div class="panel panel-default margin-b-30">
    <div class="panel-heading">
      <h4 class="panel-title">Import from Zoho</h4>
    </div>
    <div class="panel-body">
      <div class="col-sm-3">
        <%= form_tag zoho_getContacts_url, {:remote => true, :class => 'form-horizontal'} %>
          <div class="form-group">
            <div class="col-lg-10"><%= text_field_tag 'zohoSearchName', nil, {:class => 'form-control', :placeholder => 'Last Name' }%></div>
          </div>

          <div class="form-group">
            <div class="col-lg-10"><%= email_field_tag 'zohoSearchEmail', nil, {:class => 'form-control', :placeholder => 'Email'} %></div>
          </div>
          <%= submit_tag('Search', :class => 'btn btn-default', :style => 'float: right;',  :id => 'zohoSearch', :type => 'button') %>
      </div>
      <div id="zohoContactsContainer" class="col-sm-9"></div>
    </div>
  </div>
</div>
