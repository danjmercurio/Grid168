<div class="row">
  <div class="panel panel-default margin-b-30">
    <div class="panel-heading">
      <h4 class="panel-title">Import from Zoho</h4>
    </div>
    <div class="panel-body">
      <div class="col-sm-3">
        <%= form_tag zoho_getContacts_url, {:remote => true, :class => 'form-horizontal'} %>
          <div class="form-group">
            <div class="col-lg-12"><%= text_field_tag 'zohoSearchTerm', nil, {:class => 'form-control', :placeholder => 'Search terms...' }%></div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">Search by
              <select name="zohoSearchBy" id="zohoSearchBy" style="width: 100%;">
                <option value="email">Email</option>
                <option value="company">Company</option>
                <option value="last_name">Last Name</option>
              </select>
            </div>
          </div>
        <button type="button" class="btn btn-default" style="float: right;" id="zohoSearch">Search <i class="fa fa-search"></i></button>
      </div>
      <div id="zohoContactsContainer" class="col-sm-9"></div>
    </div>
  </div>
</div>
