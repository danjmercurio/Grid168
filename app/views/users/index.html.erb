<div class="row">
  <div class="col-sm-12">
    <div class="page-title">
      <h1>Manage Users
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li class="active">User List</li>
      </ol>
    </div>
  </div>
</div><!-- end .page title-->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default margin-b-30 ">
      <!-- Start .panel -->
      <div class="panel-heading">
        <h4 class="panel-title"> Users</h4>
        <div class="panel-actions">
          <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
          <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped tablesorter">
          <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin?</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
          </tr>
          </thead>
          <tbody>
            <% @users.each do |user| -%>
              <tr>
                <td><%= user.first_name %> <%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.admin? ? 'Yes' : 'No' %></td>
                <td><a href="<%= url_for(user_url(user)) %>"><button class="btn btn-primary">Edit</button></a></td>
                <td>
                  <% if current_user.id != user.id %>
                    <%= button_to 'Delete', {:action => :destroy, id: user.id},
                              :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-primary' %>
                  <% else %>
                      <%= button_to 'Delete', {:action => :destroy, id: user.id},
                                    :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-primary', :disabled => true %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><!-- End .panel -->
  </div>
</div>
